<div class="newformT" style="background-image: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), url('https://cdn.pixabay.com/photo/2014/11/22/18/38/wine-541922_960_720.jpg')">
  <h1>Book now!</h1>
    <div class="booking-infos">
      <% if @teacher.photo.attached? %>
        <%= cl_image_tag @teacher.photo.key, class: "avatar-large" %>
      <% end %>
      <div class="teacher-infos">
        <h2><%= @teacher.user.first_name.capitalize + @teacher.user.last_name.capitalize %></h2>
        <h3><%= @teacher.user.city %></h3>
        <p><%= @teacher.feature%></p>
        <p>Half day session rate: <%= @teacher.price.to_i%>$</p>
      </div>
    </div>
    <%= simple_form_for([@teacher, @booking]) do |f| %>
      <%= f.input :date, as: :date, label: "Date where you want to book #{@teacher.user.first_name}", html5: true %>
      <%= f.submit "Book", class: 'btn btn-flat' %>
    <% end %>
    <%= link_to "Back to oenologists", teachers_path %>
</div>
<%= render 'shared/footer' %>
