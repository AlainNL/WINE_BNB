<div class="container">
  <h2>Last event registered</h2>

  <ul class="cards">
  <% @bookings.last(3).each do |b| %>
    <li>
      <%= link_to booking_path(b), class: 'card' do %>
        <img src="https://cdn.pixabay.com/photo/2015/11/26/22/28/woman-1064664__340.jpg" class="card__image" alt="" />
        <div class="card__overlay">
          <div class="card__header">
            <svg class="card__arc" xmlns="http://www.w3.org/2000/svg"><path /></svg>
            <img class="card__thumb" src="https://i.imgur.com/7D7I6dI.png" alt="" />
            <div class="card__header-text">

              <h3 class="card__title"><%= b.user.first_name.capitalize %> <%= b.user.last_name.capitalize %></h3>
              <span class="card__status"><%= b.user.created_at %></span>
            </div>
          </div>
          <p class="card__description">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Asperiores, blanditiis?
          </p>
        </div>
      <% end %>
    </li>
<% end %>
</div>
