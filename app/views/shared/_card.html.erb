<div class="container-home">
  <ul class="cards-home">
  <% @teachers.last(3).each do |t| %>
    <li>
      <%= link_to teacher_path(t), class: 'card-home' do %>
        <% if t.photo.attached? %>
          <%= cl_image_tag t.photo.key, class: "card__image" %>
        <% end %>
        <div class="card__overlay">
          <div class="card__header">
            <svg class="card__arc" xmlns="http://www.w3.org/2000/svg"><path /></svg>
            <img class="card__thumb" src="https://i.imgur.com/7D7I6dI.png" alt="" />
            <div class="card__header-text">

              <h3 class="card__title"><%= t.user.first_name.capitalize %> <%= t.user.last_name.capitalize %></h3>
              <%# <span class="card__status"><%= t.user.created_at %>
            </div>
          </div>
          <p class="card__description">
            <%= t.feature %>
          </p>
        </div>
      <% end %>
    </li>
  <% end %>
</div>
