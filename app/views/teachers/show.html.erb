<div class="socials">
  <%= cl_image_tag @teacher.photo.key, height: 300, width: 400, crop: :fill %>
  <div class="menu-icon">
  <div class="menu item1"><i class="fas fa-heart"></i></div>
  <div class="menu item2"><i class="fas fa-bars"></i></div>
</div>

<div class="details">
  <h1><%@teacher.user.first_name%> <%@teacher.user.last_name%></h1>
  <h2><%@teacher.user.city%></h2>
  <p><%@teacher.feature%></p>
  <p><%@teacher.price%></p>

</div>

<div class="foot-car">
  <h1>Contact</h1>
  <a href="#" class="social-icon facebook"><i class="fab fa-facebook-f"></i></a>
  <a href="#" class="social-icon linkedin"><i class="fab fa-linkedin"></i></a>

  <div class="links">
    <button>Contact me</button>
    <%= link_to "book now!", new_teacher_booking_path(@teacher.id) %>
  </div>
</div>
<%= render 'shared/footer' %>
