<div class="row">
 <div class="container2" style="background-image: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), url('https://cdn.pixabay.com/photo/2014/11/22/18/38/wine-541922_960_720.jpg')">
  <div class="formnewT">
      <h1>Welcome to WineBnB</h1>
      <h3>Create your oenologist profile in 5 minutes</h3>
      <%= simple_form_for @teacher do |f| %>
            <%= f.input :photo, label: 'Please add your picture', as: :file %>
            <%= f.input :feature, label: 'Main skills', placeholder: 'Wines of Bordeaux' %>
            <%= f.input :price, label: "Rate per half day" %>
            <%= f.submit "Register", class: 'btn btn-flat'%>
          <% end %>
          <%= link_to "Back to oenologists", teachers_path %>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>

<div class="card-container" style="background-image: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), url('https://cdn.pixabay.com/photo/2014/11/22/18/38/wine-541922_960_720.jpg')">
  <div class="formnewT">
    <div class="card u-clearfix">
      <div class="card-body">
        <span class="card-number card-circle subtle">B</span>
        <span class="card-author subtle"><%=@booking.teacher.user.first_name%> <%=@booking.teacher.user.last_name%></span>
        <h2 class="card-title"><%=@booking.date.strftime(' %m %b %Y')%></h2>
        <span class="card-description subtle">Club Oenologique, a celebration of the authentic, the artisan and the analogue, is a sumptuous quarterly magazine about wine, spirits and good living: the profound depth of a fine wine.</span>
        <div class="card-read"><%= link_to dashboard_path do %>Book<% end %></div>
        <span class="card-tag card-circle subtle">B</span>
      </div>
      <img src="https://images.unsplash.com/photo-1566995541428-f2246c17cda1?ixlib=rb-1.2.1&raw_url=true&q=80&fm=jpg&crop=entropy&cs=tinysrgb&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1064" alt="" class="card-media" />
    </div>
    <div class="card-shadow"></div>
  </div>
</div>
